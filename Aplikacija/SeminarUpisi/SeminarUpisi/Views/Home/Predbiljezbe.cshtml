@model IEnumerable<SeminarUpisi.Models.Predbiljezba>

@{
    ViewBag.Title = "Predbilježbe";
}

<style>
    .form-control {
     display: inline;
    }
    table, th, td {
        border: 1px solid #ddd;
    }

    #tPredbiljezbe #tHeaderRow {
        border-bottom: 2px solid #ddd;
    }

    #tPredbiljezbe tr:nth-child(even) {
        background-color: #f5f5f5;
    }
</style>

<br />

@using (Html.BeginForm(FormMethod.Get))
{
    <p>
        <b>Status:</b> @Html.DropDownList("predbiljezbeStatus", null, "Sve", new { @class = "form-control" }) &nbsp;
        <b>Pretraga:</b> @Html.TextBox("searchString", null, new { @class = "form-control" }) <input type="submit" value="Pretraži" class="btn btn-default"/>
    </p>
    <br />
}

<table class="table" id="tPredbiljezbe">
    <tr id="tHeaderRow">
        <th></th>
        <th>
            Seminar
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Datum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Odaberi", "ObradiPredbiljezbu", new { id = item.IdPredbiljezba })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seminar.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
        </tr>
    }

</table>
